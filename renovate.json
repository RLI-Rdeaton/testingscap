{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": [
        "dockerfile",
        "github-actions"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "radiantone/fid"
            ],
            "matchUpdateTypes": ["major", "minor"],
            "allowedVersions": "<=7.4",
            "versioning": "loose"
        }
    ]
}

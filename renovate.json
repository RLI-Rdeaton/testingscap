{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "docker:enableMajor"
    ],
    "prConcurrentLimit": 10,
    "prHourlyLimit": 10,
    "packageRules": [
        {
            "packageRules": [
                {
                    "matchDatasources": [
                        "npm"
                    ],
                    "matchDepNames": [
                        "@mitre/saf"
                    ],
                    "matchManagers": [
                        "custom.regex"
                    ],
                    "recreateWhen": [
                        "always"
                    ],
                    "automerge": true,
                    "ignoreTests": true
                },
                {
                    "matchDatasources": [
                        "docker"
                    ],
                    "matchDepNames": [
                        "alpine"
                    ],
                    "automerge": true,
                    "ignoreTests": true
                },
                {
                    "matchDatasources": [
                        "github-releases"
                    ],
                    "matchDepNames": [
                        "ComplianceAsCode/content",
                        "chainguard-dev/stigs"
                    ],
                    "matchManagers": [
                        "custom.regex"
                    ],
                    "automerge": true,
                    "ignoreTests": true
                },
                {
                    "matchDatasources": [
                        "docker"
                    ],
                    "matchDepNames": [
                        "radiantone/fid",
                        "docker.io/radiantone/fid"
                    ],
                    "matchUpdateTypes": [
                        "patch"
                    ]
                }
            ]
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "SCAP_SECURITY_GUIDE_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "ComplianceAsCode/content",
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "MITRE_SAF_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "@mitre/saf",
            "datasourceTemplate": "npm"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "WOLFI_STIG_VERSION *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "chainguard-dev/stigs",
            "datasourceTemplate": "github-releases"
        },
        {
            "customType": "regex",
            "fileMatch": [
                "\\.yml$"
            ],
            "matchStrings": [
                "CURRENT_VERSION_TAG *: *\"(?<currentValue>.+?)\""
            ],
            "depNameTemplate": "radiantone/fid",
            "datasourceTemplate": "docker"
        }
    ]
}
